<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_notification"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/img_ntfType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1.75"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_guanzon_logo"
            tools:ignore="VectorDrawableCompat"
            app:tint="@color/guanzon_digital_light_orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3dp"
            android:layout_weight=".25"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/lbl_ntfTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="OR/CR Registration"
                    android:gravity="center_vertical"
                    android:textColor="@color/font_heavy" />

                <TextView
                    android:id="@+id/lbl_ntfDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:textAlignment="textEnd"
                    android:text="Aug. 31, 2019"
                    android:textColor="@color/font_regular"
                    android:textSize="10sp"
                    android:gravity="end|center_vertical"/>

                <ImageView
                    android:id="@+id/img_notif"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_notification_overlay"
                    app:tint="@color/com_facebook_blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/lbl_ntfMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Your Mc serial registration has been process by our authorize agent"
                android:textColor="@color/font_light" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>