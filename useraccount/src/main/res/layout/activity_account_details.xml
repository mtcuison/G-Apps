<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.rmj.guanzongroup.useraccount.Activity.Activity_AccountDetails"
    android:orientation="vertical"
    android:theme="@style/GuanzonMarketplace.Theme">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppToolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:cardCornerRadius="90dp"
                    app:cardElevation="3dp"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/sample_user_img_profile"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lblNotSet"
                        android:textColor="@color/font_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/lbl_appID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/lblNotSet"
                        android:textColor="@color/font_light"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/your_state_progress_bar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:spb_maxStateNumber="three"
                app:spb_stateBackgroundColor="#BDBDBD"
                app:spb_stateForegroundColor="@color/guanzon_digital_light_orange"
                app:spb_stateNumberBackgroundColor="#808080"
                app:spb_stateNumberForegroundColor="#eeeeee"
                app:spb_currentStateDescriptionColor="@color/guanzon_digital_light_orange"
                app:spb_stateDescriptionColor="#808080"
                app:spb_animateToCurrentProgressState="true"
                app:spb_checkStateCompleted="true"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="@string/lblVerifyAccount"
                style="@style/ButtonStyle.Orange.Medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Personal Information"
                android:textColor="@color/font_regular"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/font_light"
                android:layout_marginTop="10dp"/>

<!--            Full Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Full Name :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_fullName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"/>

            </LinearLayout>

<!--            Gender-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Gender :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"/>

            </LinearLayout>

<!--            Birth Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Birth Date :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_birthDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"/>

            </LinearLayout>

<!--            Birth Place-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Birth Place :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_birthPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"/>

            </LinearLayout>

<!--            Civil Status-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Civil Status :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_civilStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Account Information"
                android:textColor="@color/font_regular"
                android:textSize="16sp"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/font_light"
                android:layout_marginTop="10dp"/>

<!--            Email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Email :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:paddingEnd="15dp"/>

                <TextView
                    android:id="@+id/lbl_editEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Edit"
                    android:textColor="@color/font_light"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

<!--            Email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Mobile No :"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/lblNotSet"
                    android:textColor="@color/font_light"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:paddingEnd="15dp"/>

                <TextView
                    android:id="@+id/lbl_editMobileNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Edit"
                    android:textColor="@color/font_light"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

<!--            Email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="19dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.65"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/font_regular"
                    android:textSize="16sp"
                    android:text="Password"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbl_editPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Edit"
                    android:textColor="@color/font_light"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>