<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GuanzonMarketplace.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/guanzon_digital_light_orange</item>
        <item name="colorPrimaryVariant">@color/marketplace_orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--   a darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/marketplace_orange</item>

        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/guanzon_digital_orange</item>
        <!-- Secondary brand color. -->
        <item name="searchViewStyle">@style/MySearchView</item>
        <item name="colorSecondary">@color/guanzon_digital_orange</item>
        <item name="colorSecondaryVariant">@color/guanzon_digital_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/app_background</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ClearAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/status_bar</item>

    </style>
    <style name="ClearAppTheme.ActionBar.Transparent" parent="ClearAppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="FragmentTheme">
        <item name="android:layout_margin" tools:ignore="NewApi">17dp</item>
    </style>

    <style name="ScrollViewTheme">
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">5dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">17dp</item>
    </style>

    <style name="TextInputLabel">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/font_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:spacing">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SubText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LoginLinkLabel">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/link_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">2dp</item>
        <item name="boxStrokeColor">@color/guanzon_digital_light_orange</item>
        <item name="hintTextColor">@color/guanzon_digital_light_orange</item>
        <item name="colorControlActivated">@color/guanzon_digital_light_orange</item>
        <item name="boxBackgroundColor">#FCFCFC</item>
        <item name="background">@color/app_background</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="AutoCompleteStyleTheme" parent="TextInputStyle">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomDropDownTilStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@color/app_background</item>
        <item name="android:layout_margin">2dp</item>
        <item name="boxStrokeColor">@color/guanzon_digital_light_orange</item>
        <item name="hintTextColor">@color/guanzon_digital_light_orange</item>
        <item name="colorControlActivated">@color/guanzon_digital_light_orange</item>
        <item name="boxBackgroundColor">#FCFCFC</item>
        <item name="background">@color/app_background</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="DropdownStyleTheme" parent="AutoCompleteStyleTheme">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonStyle.Orange.Large" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/guanzon_digital_orange</item>
    </style>

    <style name="ButtonStyle.Orange.Medium" parent="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/guanzon_digital_orange</item>
    </style>

    <style name="ButtonStyle.Orange.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/guanzon_digital_orange</item>
    </style>

    <style name="ButtonStyle.LightOrange.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/guanzon_digital_light_orange</item>
        <item name="backgroundTint">@color/background_lighten_orange</item>
    </style>

    <style name="ButtonStyle.Grey.Medium" parent="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/guanzon_digital_dark_grey</item>
    </style>

    <style name="ButtonStyle.Grey.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/guanzon_digital_dark_grey</item>
    </style>

    <style name="ButtonStyle.Light.Medium" parent="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/guanzon_digital_grey</item>
    </style>

    <style name="ButtonStyle.Light.Small" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/guanzon_digital_grey</item>
    </style>

    <style name="GcardInfoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="GcardTextInfoStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GcardTextInfoStyle.Active" parent="GcardTextInfoStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GcardTextInfoStyle.Active.Bold" parent="GcardTextInfoStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GcardTextInfoStyle.Inactive" parent="GcardTextInfoStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="GcardTextInfoStyle.Inactive.Bold" parent="GcardTextInfoStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/upper_corner_round</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_out</item>
    </style>

    <style name="ToolBarMaterialTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/guanzon_digital_dark_grey</item>
        <item name="titleTextColor" tools:targetApi="m">@color/guanzon_digital_orange</item>
        <item name="buttonTint" tools:targetApi="lollipop">@color/guanzon_digital_light_grey</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

</resources>