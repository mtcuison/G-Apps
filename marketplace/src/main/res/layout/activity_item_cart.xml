<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.rmj.guanzongroup.marketplace.Activity.Activity_ItemCart">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_item_cart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppToolbar"/>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_item_cart_fragment_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="4dp"
        style="@style/Widget.MaterialComponents.TabLayout"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIconTint="@color/tab_select_indicator_dashboard"
        app:tabIndicatorColor="@color/guanzon_digital_orange"
        app:tabIndicator="@color/guanzon_digital_orange"
        app:tabIndicatorAnimationDuration="1"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="@color/tab_select_indicator_dashboard"
        android:backgroundTint="@color/guanzon_digital_dark_grey"
        android:elevation="5dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_fragment_item_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>